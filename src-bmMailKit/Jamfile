SubDir TOP src-bmMailKit ;

# <pe-inc>
SubDirHdrs $(TOP) src-bmBase ;
SubDirHdrs $(TOP) src-bmRegexx ;

SubDirSysHdrs /boot/home/config/include ;
# </pe-inc>

LINKFLAGS += -L/boot/home/config/lib ;

DEFINES += BM_BUILDING_BMMAILKIT ;

# <pe-src>
SharedLibrary bmMailKit.so : 
	BmApp.cpp
	BmBodyPartList.cpp
	BmController.cpp
	BmDataModel.cpp
	BmEncoding.cpp
	BmFilter.cpp
	BmFilterChain.cpp
	BmIdentity.cpp
	BmMail.cpp
	BmMailFactory.cpp
	BmMailFilter.cpp
	BmMailFolder.cpp
	BmMailFolderList.cpp
	BmMailHeader.cpp
	BmMailMonitor.cpp
	BmMailQuery.cpp
	BmMailRef.cpp
	BmMailRefList.cpp
	BmPopAccount.cpp
	BmPrefs.cpp
	BmRefManager.cpp
	BmRoster.cpp
	BmSignature.cpp
	BmSmtpAccount.cpp
	BmStorageUtil.cpp
	BmUtil.cpp
	:  
		bmBase.so bmRegexx.so 
		iconv $(STDC++LIB) be 
	;
# </pe-src>

MakeLocate bmMailKit.so : [ FDirName $(DISTRO_DIR) lib ] ;

