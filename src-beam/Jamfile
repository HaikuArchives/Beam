MakeLocate beamInParts.a : [ FDirName $(OBJECTS_DIR) lib ] ;

# <pe-src>
Application Beam : 
	Beam.cpp
	BmMailAddrCompleter.cpp
	: 	
		beamInParts.a
		bmBase.so bmRegexx.so bmMailKit.so bmDaemon.so bmGuiBase.so 
