SubDirHdrs $(TOP) src-bmMailKit ;
SubDirHdrs $(TOP) src-filter-addons src-sieve src-libSieve ;
SubDirHdrs $(OBJECTS_DIR) src-filter-addons src-sieve src-libSieve ;

SubDirSysHdrs /boot/home/config/include/cppunit ;
